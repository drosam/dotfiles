#!/bin/bash

cd ~/Developer/dotfiles

rm ~/.zshrc

if [ -f /.dockerenv ]; then
  folders=(
    "delta"
    "gitconfig"
    "nvim"
    "tmux.conf"
    "tmux"
    "tmuxinator"
    "zshrc"
    "bin"
    "starship"
    "opencode"
    "lazygit"
  )
else
  folders=(
    "alacritty"
    "ghostty"
    "delta"
    "gitconfig"
    "nvim"
    "skhd"
    "tmux.conf"
    "tmux"
    "tmuxinator"
    "zshrc"
    "bin"
    "starship"
    "opencode"
    "lazygit"
  )
fi

stow --dotfiles -t $HOME "${folders[@]}"

cd -
